{
	"root": true,
	"extends": [
		"@wordpress/eslint-plugin/recommended"
	],
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jquery": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"globals": {
		"wp": "readonly",
		"jQuery": "readonly",
		"$": "readonly",
		"ajaxurl": "readonly",
		"to_theme": "readonly",
		"tour_operator": "readonly",
		"lsx_to_maps_params": "readonly",
		"google": "readonly"
	},
	"rules": {
		"no-console": "warn",
		"no-unused-vars": "warn",
		"prefer-const": "warn",
		"no-var": "warn",
		"camelcase": "warn",
		"object-shorthand": "warn",
		"no-undef": "error",
		"@wordpress/no-unsafe-wp-apis": "off",
		"@wordpress/no-global-active-element": "off"
	},
	"ignorePatterns": [
		"public/",
		"assets/dist/",
		"vendor/",
		"node_modules/",
		"tests/",
		"test-results/",
		"playwright-report/",
		"coverage/",
		"resources/",
		"*.min.js",
		"*.asset.php"
	]
}
